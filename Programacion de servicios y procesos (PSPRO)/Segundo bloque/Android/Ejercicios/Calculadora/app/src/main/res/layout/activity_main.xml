<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textOperacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="true"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textResultado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:scrollHorizontally="true"
                    android:textAlignment="textEnd"
                    android:textSize="24sp" />
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnC"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btnC"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btnParentesis"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btnParentesis"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btnPorciento"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btnPorciento"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btnDivision"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btnDivision"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btn7"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btn8"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btn8"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btn9"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btn9"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btnMultiplicacion"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btnMultiplicacion"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btn4"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btn5"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btn5"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btn6"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btn6"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btnRestar"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btnRestar"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btn1"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btn2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btn2"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btn3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btn3"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btnSumar"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btnSumar"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMasMenos"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btnMasMenos"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btn0"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btn0"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btnComa"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btnComa"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

            <Button
                android:id="@+id/btnIgual"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:onClick="onBtnClicked"
                android:text="@string/btnIgual"
                android:textSize="25sp"
                app:strokeColor="#8C8989" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>