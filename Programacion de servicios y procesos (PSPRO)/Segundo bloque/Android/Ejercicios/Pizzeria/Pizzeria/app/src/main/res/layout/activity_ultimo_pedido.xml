<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedidosViews.UltimoPedidoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="273dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textTitleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textTitleView"
            android:textSize="34sp"
            android:layout_marginVertical="30dp"/>

        <TextView
            android:id="@+id/textNombrePizzaRepe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginVertical="15dp"/>

        <TextView
            android:id="@+id/textIngredientesPizzaRepe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginVertical="15dp"/>

        <Button
            android:id="@+id/btnVolverPedir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnVolverPedir"
            android:layout_marginVertical="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>